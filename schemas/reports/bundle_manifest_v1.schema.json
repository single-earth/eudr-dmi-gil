{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/reports/bundle_manifest_v1.schema.json",
  "title": "EUDR-DMI-GIL Bundle Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "bundle_date",
    "bundle_id",
    "created_utc",
    "generator",
    "inputs",
    "artifacts"
  ],
  "properties": {
    "schema": {
      "type": "string"
    },
    "bundle_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "bundle_id": {
      "type": "string",
      "minLength": 1
    },
    "created_utc": {
      "type": "string",
      "description": "ISO-8601 timestamp in UTC"
    },
    "generator": {
      "type": "object"
    },
    "inputs": {
      "type": "object"
    },
    "declared_report_types": {
      "type": "array",
      "items": { "type": "string" }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["relpath", "sha256", "size_bytes"],
        "properties": {
          "relpath": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "content_type": { "type": ["string", "null"] },
          "meta": { "type": ["object", "null"] }
        }
      }
    }
  }
}
