{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/reports/aoi_report_v1.schema.json",
  "title": "AOI Report v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "report_version",
    "generated_at_utc",
    "bundle_id",
    "report_metadata",
    "aoi_id",
    "aoi_geometry_ref",
    "inputs",
    "metrics",
    "evidence_artifacts",
    "evidence_registry",
    "acceptance_criteria",
    "regulatory_traceability",
    "assumptions",
    "policy_mapping_refs"
  ],
  "properties": {
    "report_version": {
      "type": "string",
      "enum": ["aoi_report_v1"],
      "description": "Versioned report contract identifier."
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time",
      "description": "UTC ISO-8601 timestamp for when this report JSON was generated."
    },
    "bundle_id": {
      "type": "string",
      "minLength": 1
    },
    "report_metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["report_type", "regulatory_context", "assessment_capability"],
      "properties": {
        "report_type": {
          "type": "string",
          "enum": ["example", "production", "test"]
        },
        "regulatory_context": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "regulation",
            "in_scope_articles",
            "out_of_scope_articles"
          ],
          "properties": {
            "regulation": {
              "type": "string",
              "enum": ["EUDR"]
            },
            "in_scope_articles": {
              "type": "array",
              "items": { "type": "string" }
            },
            "out_of_scope_articles": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "assessment_capability": {
          "type": "string",
          "enum": ["inspectable_only", "assessable"]
        }
      }
    },
    "aoi_id": {
      "type": "string",
      "minLength": 1
    },
    "aoi_geometry_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "value"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["uri", "wkt", "geojson", "dataset_feature"],
          "description": "How to interpret `value`."
        },
        "value": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "Optional hash of an external geometry artifact when applicable."
        }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sources"],
      "properties": {
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["source_id"],
            "properties": {
              "source_id": { "type": "string", "minLength": 1 },
              "version": { "type": "string" },
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
              "uri": { "type": "string" },
              "content_type": { "type": "string" }
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Metric key/value pairs with units.",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["value", "unit"],
        "properties": {
          "value": { "type": ["number", "integer", "string", "boolean", "null"] },
          "unit": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" }
        }
      }
    },
    "evidence_artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["relpath", "sha256"],
        "properties": {
          "relpath": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "content_type": { "type": "string" },
          "meta": { "type": "object" }
        }
      }
    },
    "evidence_registry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["evidence_classes"],
      "properties": {
        "evidence_classes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["class_id", "mandatory", "status"],
            "properties": {
              "class_id": { "type": "string", "minLength": 1 },
              "mandatory": { "type": "boolean" },
              "status": { "type": "string", "enum": ["missing", "partial", "present"] }
            }
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["criteria_id", "description", "evidence_classes", "decision_type"],
        "properties": {
          "criteria_id": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "evidence_classes": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "decision_type": { "type": "string", "minLength": 1 }
        }
      }
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["result_id", "criteria_ids"],
        "properties": {
          "result_id": { "type": "string", "minLength": 1 },
          "criteria_ids": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "evidence_classes": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "assumption_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "non_testable_due_to_assumptions": { "type": "boolean" }
        }
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["assumption_id", "description", "testable", "affects_results"],
        "properties": {
          "assumption_id": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "testable": { "type": "boolean" },
          "affects_results": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "methodology": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "forest_loss_post_2020": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "data_sources",
            "dataset_version",
            "forest_definition",
            "calculation",
            "resolution",
            "tile_source",
            "is_placeholder"
          ],
          "properties": {
            "data_sources": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            },
            "dataset_version": { "type": "string", "minLength": 1 },
            "forest_definition": {
              "type": "object",
              "additionalProperties": false,
              "required": ["tree_cover_threshold_percent"],
              "properties": {
                "tree_cover_threshold_percent": { "type": "integer", "minimum": 0 }
              }
            },
            "calculation": {
              "type": "object",
              "additionalProperties": false,
              "required": ["method", "cutoff_date", "area_units"],
              "properties": {
                "method": { "type": "string", "enum": ["pixel_wise_intersection"] },
                "cutoff_date": { "type": "string", "format": "date" },
                "area_units": { "type": "string", "enum": ["ha"] }
              }
            },
            "resolution": {
              "type": "object",
              "additionalProperties": false,
              "required": ["pixel_size_m"],
              "properties": {
                "pixel_size_m": { "type": "number", "minimum": 0 }
              }
            },
            "tile_source": { "type": "string", "enum": ["local", "minio", "other"] },
            "is_placeholder": { "type": "boolean" },
            "calculation_run_metadata": { "type": "object" }
          }
        }
      }
    },
    "computed": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "forest_loss_post_2020": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "pixel_initial_tree_cover_ha",
            "pixel_forest_loss_post_2020_ha",
            "pixel_current_tree_cover_ha",
            "mask_forest_loss_post_2020",
            "mask_forest_current_year",
            "tiles_manifest"
          ],
          "properties": {
            "pixel_initial_tree_cover_ha": { "type": "number" },
            "pixel_forest_loss_post_2020_ha": { "type": "number" },
            "pixel_current_tree_cover_ha": { "type": "number" },
            "mask_forest_loss_post_2020": { "type": "string", "minLength": 1 },
            "mask_forest_current_year": { "type": "string", "minLength": 1 },
            "tiles_manifest": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "computed_outputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "forest_loss_post_2020": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "area_ha",
            "pixel_size_m",
            "tiles_manifest_ref"
          ],
          "properties": {
            "area_ha": { "type": "number" },
            "pixel_size_m": { "type": "number" },
            "mask_geojson_ref": {
              "type": "object",
              "additionalProperties": false,
              "required": ["relpath", "sha256", "content_type"],
              "properties": {
                "relpath": { "type": "string", "minLength": 1 },
                "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
                "content_type": { "type": "string", "minLength": 1 }
              }
            },
            "mask_wkt_ref": { "type": "string", "minLength": 1 },
            "tiles_manifest_ref": {
              "type": "object",
              "additionalProperties": false,
              "required": ["relpath", "sha256", "content_type"],
              "properties": {
                "relpath": { "type": "string", "minLength": 1 },
                "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
                "content_type": { "type": "string", "minLength": 1 }
              }
            },
            "calculation_run_metadata": { "type": "object" }
          },
          "anyOf": [
            {"required": ["mask_geojson_ref"]},
            {"required": ["mask_wkt_ref"]}
          ]
        }
      }
    },
    "validation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "forest_area_crosscheck": {
          "type": "object",
          "additionalProperties": false,
          "required": ["source", "fields_used", "outcome", "comparison", "csv_ref"],
          "properties": {
            "source": { "type": "string", "minLength": 1 },
            "fields_used": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            },
            "outcome": {
              "type": "string",
              "enum": ["consistent", "divergent", "not_comparable"]
            },
            "comparison": {
              "type": "object",
              "additionalProperties": false,
              "required": ["tolerance_percent"],
              "properties": {
                "tolerance_percent": { "type": "number" }
              }
            },
            "csv_ref": {
              "type": "object",
              "additionalProperties": false,
              "required": ["relpath", "sha256", "content_type"],
              "properties": {
                "relpath": { "type": "string", "minLength": 1 },
                "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
                "content_type": { "type": "string", "minLength": 1 }
              }
            },
            "reason": { "type": "string", "minLength": 1 }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "outcome": { "const": "not_comparable" }
                }
              },
              "then": { "required": ["reason"] }
            }
          ]
        }
      }
    },
    "regulatory_traceability": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "regulation",
          "article_ref",
          "evidence_class",
          "acceptance_criteria",
          "result_ref"
        ],
        "properties": {
          "regulation": { "type": "string", "minLength": 1 },
          "article_ref": { "type": "string", "minLength": 1 },
          "evidence_class": { "type": "string", "minLength": 1 },
          "acceptance_criteria": { "type": "string", "minLength": 1 },
          "result_ref": { "type": "string", "minLength": 1 }
        }
      }
    },
    "policy_mapping_refs": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "description": "References into the policy-to-evidence spine (IDs/URIs)."
    },
    "extensions": {
      "type": "object",
      "description": "Optional forward-compatible extension point.",
      "additionalProperties": true
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "report_metadata": {
            "properties": {
              "assessment_capability": { "const": "assessable" }
            }
          }
        }
      },
      "then": {
        "properties": {
          "evidence_registry": {
            "properties": {
              "evidence_classes": {
                "not": {
                  "contains": {
                    "type": "object",
                    "properties": {
                      "mandatory": { "const": true },
                      "status": { "const": "missing" }
                    },
                    "required": ["mandatory", "status"]
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
