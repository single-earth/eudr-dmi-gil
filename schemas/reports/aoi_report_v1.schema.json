{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/schemas/reports/aoi_report_v1.schema.json",
  "title": "AOI Report v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "report_version",
    "generated_at_utc",
    "bundle_id",
    "report_metadata",
    "aoi_id",
    "aoi_geometry_ref",
    "inputs",
    "metrics",
    "evidence_artifacts",
    "evidence_registry",
    "policy_mapping_refs"
  ],
  "properties": {
    "report_version": {
      "type": "string",
      "enum": ["aoi_report_v1"],
      "description": "Versioned report contract identifier."
    },
    "generated_at_utc": {
      "type": "string",
      "format": "date-time",
      "description": "UTC ISO-8601 timestamp for when this report JSON was generated."
    },
    "bundle_id": {
      "type": "string",
      "minLength": 1
    },
    "report_metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["report_type", "regulatory_context", "assessment_capability"],
      "properties": {
        "report_type": {
          "type": "string",
          "enum": ["example", "production", "test"]
        },
        "regulatory_context": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "regulation",
            "in_scope_articles",
            "out_of_scope_articles"
          ],
          "properties": {
            "regulation": {
              "type": "string",
              "enum": ["EUDR"]
            },
            "in_scope_articles": {
              "type": "array",
              "items": { "type": "string" }
            },
            "out_of_scope_articles": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "assessment_capability": {
          "type": "string",
          "enum": ["inspectable_only", "assessable"]
        }
      }
    },
    "aoi_id": {
      "type": "string",
      "minLength": 1
    },
    "aoi_geometry_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "value"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["uri", "wkt", "geojson", "dataset_feature"],
          "description": "How to interpret `value`."
        },
        "value": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "Optional hash of an external geometry artifact when applicable."
        }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sources"],
      "properties": {
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["source_id"],
            "properties": {
              "source_id": { "type": "string", "minLength": 1 },
              "version": { "type": "string" },
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
              "uri": { "type": "string" },
              "content_type": { "type": "string" }
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Metric key/value pairs with units.",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["value", "unit"],
        "properties": {
          "value": { "type": ["number", "integer", "string", "boolean", "null"] },
          "unit": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" }
        }
      }
    },
    "evidence_artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["relpath", "sha256"],
        "properties": {
          "relpath": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "content_type": { "type": "string" },
          "meta": { "type": "object" }
        }
      }
    },
    "evidence_registry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["evidence_classes"],
      "properties": {
        "evidence_classes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["class_id", "mandatory", "status"],
            "properties": {
              "class_id": { "type": "string", "minLength": 1 },
              "mandatory": { "type": "boolean" },
              "status": { "type": "string", "enum": ["missing", "partial", "present"] }
            }
          }
        }
      }
    },
    "policy_mapping_refs": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "description": "References into the policy-to-evidence spine (IDs/URIs)."
    },
    "extensions": {
      "type": "object",
      "description": "Optional forward-compatible extension point.",
      "additionalProperties": true
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "report_metadata": {
            "properties": {
              "assessment_capability": { "const": "assessable" }
            }
          }
        }
      },
      "then": {
        "properties": {
          "evidence_registry": {
            "properties": {
              "evidence_classes": {
                "not": {
                  "contains": {
                    "type": "object",
                    "properties": {
                      "mandatory": { "const": true },
                      "status": { "const": "missing" }
                    },
                    "required": ["mandatory", "status"]
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
